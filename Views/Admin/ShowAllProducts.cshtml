@model IEnumerable<E_Commerce.Models.Product>

@{
    ViewData["Title"] = "Products";
    var categories = ViewBag.categories as List<CategoryViewModel>;
}
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/2.3.2/css/dataTables.dataTables.css" />

<script src="https://cdn.datatables.net/2.3.2/js/dataTables.js"></script>
<script>
    $(document).ready( function () {
           $('#ProductsTable').DataTable();
       } );</script>
<div style="margin-bottom:7%;"></div>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 style="margin-left:50%;" class="mb-0">@ViewData["Title"]</h2>
        <a  asp-action="AddProduct" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>
    
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle shadow-sm" id="ProductsTable">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Amount)</th>
                    <th>Category</th>
                    <th>@Html.DisplayNameFor(model => model.InsertionDate)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Amount</td>
                        <td>@categories?.FirstOrDefault(c => c.Id == item.CategoryId)?.Name</td>
                        <td>@item.InsertionDate?.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" style="width:80px;">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="ShowProduct" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1 text-white" style="width:80px;">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a data-bs-toggle="modal" data-bs-target="#confirmDeleteModal-@item.Id" class="btn btn-sm btn-danger" style="width:80px;">
                                <i class="bi bi-trash"></i> Delete
                            </a>

                            <!-- Modal خاص بالـ Item -->
                            <div class="modal fade" id="confirmDeleteModal-@item.Id" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Confirm Delete</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete <strong>@item.Name</strong>?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
