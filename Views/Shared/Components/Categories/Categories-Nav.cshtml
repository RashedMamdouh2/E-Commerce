@model List<Category>

<header id="header" class="header d-flex align-items-center fixed-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center">

        <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto">
            <!-- لو حابب تستخدم لوجو صورة -->
            <!-- <img src="~/assets/img/logo.png" alt=""> -->
            <h1 class="sitename">Techie</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul class="d-flex flex-wrap align-items-center mb-0">
                @foreach (var category in Model)
                {
                    <li class="nav-item">
                        <a class="nav-link px-3"
                           asp-action="ShowCategory"
                           asp-controller="Category"
                           asp-route-id="@category.Id">
                           
                        
                            @category.Name
                        </a>
                    </li>
                }
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

        <a class="btn-getstarted ms-3" href="#about">Get Started</a>

    </div>
</header>
